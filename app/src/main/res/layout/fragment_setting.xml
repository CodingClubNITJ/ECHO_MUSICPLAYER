<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#ffffff"
>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="Change song on Shake"
    android:textSize="17sp"
    android:textColor="#000000"
    android:padding="11dp"
    android:id="@+id/changeshaketext"/>
    <Switch android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:padding="11dp"
    android:id="@+id/shakeswitch"
    android:backgroundTint="#212121"/>
    <View android:layout_width="match_parent" android:layout_height="0.2dp"
          android:layout_below="@id/changeshaketext"
    android:background="#bdbdbd"
    android:layout_marginTop="10dp"/>
</RelativeLayout>